<div class="container">

  <%# --------Search / filter---------- %>

  <div class="search">

    <h2>Country</h2>
    <%= render 'shared/search'  %>

  </div>

  <%# ------------Summary-------------- %>

  <% if params[:country].present? && params[:country] != "All" %>
    <h2 class="mt-3">Summary in <%=params[:country] %> </h2>
  <% else %>
    <h2>Summary</h2>
  <% end %>

  <div class="cards-container">

    <div class="card-1">
      <h5>Revenue</h5>
      <h2><%= @total.round(2) %> €</h2>
    </div>

    <div class="card-2">
      <h5>Average revenue per order</h5>
      <h2><%= @average_revenue_per_order.round(2) %> €</h2>
    </div>

    <div class="card-3">
      <h5>Customers</h5>
      <h2><%= @unique_customers %></h2>
    </div>

  </div>

  <%# -------------- Charts ----------------%>


</div>
