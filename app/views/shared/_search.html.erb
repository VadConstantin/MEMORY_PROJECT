<div class="container index-1">

  <div class="search-form-control form-group search-container">

    <div>
      <%= form_tag root_path, method: :get do %>
    </div>

    <div>
     <%= select_tag :country, options_for_select(["All","United Kingdom", "France", "Portugal",
                   "Australia", "Germany", "Norway", "EIRE", "Spain", "Poland", "Italy", "Lithuania", "Japan", "Switzerland", "Belgium", "Netherlands", "Cyprus", "Denmark", "Sweden"]), class: "form-control", prompt: "Choose a country" %>
    </div>

    <div>
      <%= button_tag "Go", class:"btn btn-primary"%>

    </div>

    <% end %>
  </div>

</div>
